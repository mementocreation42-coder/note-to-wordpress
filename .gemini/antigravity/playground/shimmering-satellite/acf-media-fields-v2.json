[
    {
        "key": "group_media_metadata",
        "title": "Media Metadata",
        "fields": [
            {
                "key": "field_media_type",
                "label": "Media Type",
                "name": "media_type",
                "type": "radio",
                "instructions": "Is this a photo or a video?",
                "required": 1,
                "choices": {
                    "image": "Image",
                    "video": "Video"
                },
                "default_value": "image",
                "layout": "horizontal"
            },
            {
                "key": "field_wp_image",
                "label": "Photo",
                "name": "wp_image",
                "type": "image",
                "instructions": "Upload photo to WordPress.",
                "required": 1,
                "conditional_logic": [
                    [
                        {
                            "field": "field_media_type",
                            "operator": "==",
                            "value": "image"
                        }
                    ]
                ],
                "return_format": "array",
                "preview_size": "medium",
                "library": "all"
            },
            {
                "key": "field_cloudinary_id",
                "label": "Cloudinary Public ID",
                "name": "cloudinary_id",
                "type": "text",
                "instructions": "Video ID from Cloudinary.",
                "required": 1,
                "conditional_logic": [
                    [
                        {
                            "field": "field_media_type",
                            "operator": "==",
                            "value": "video"
                        }
                    ]
                ],
                "placeholder": "folder/video-name"
            },
            {
                "key": "field_transcription",
                "label": "Transcription / Emotion",
                "name": "transcription",
                "type": "textarea",
                "instructions": "Appears as overlay text.",
                "rows": 3
            },
            {
                "key": "field_gallery",
                "label": "Gallery (Carousel)",
                "name": "gallery",
                "type": "repeater",
                "instructions": "Add extra items.",
                "layout": "block",
                "button_label": "Add Item",
                "sub_fields": [
                    {
                        "key": "field_gallery_type",
                        "label": "Type",
                        "name": "type",
                        "type": "select",
                        "choices": {
                            "image": "Image",
                            "video": "Video"
                        }
                    },
                    {
                        "key": "field_gallery_wp_image",
                        "label": "Photo",
                        "name": "wp_image",
                        "type": "image",
                        "return_format": "array",
                        "conditional_logic": [
                            [
                                {
                                    "field": "field_gallery_type",
                                    "operator": "==",
                                    "value": "image"
                                }
                            ]
                        ]
                    },
                    {
                        "key": "field_gallery_src",
                        "label": "Cloudinary ID",
                        "name": "src",
                        "type": "text",
                        "conditional_logic": [
                            [
                                {
                                    "field": "field_gallery_type",
                                    "operator": "==",
                                    "value": "video"
                                }
                            ]
                        ]
                    }
                ]
            }
        ],
        "location": [
            [
                {
                    "param": "post_type",
                    "operator": "==",
                    "value": "post"
                }
            ]
        ],
        "menu_order": 0,
        "position": "normal",
        "style": "default",
        "label_placement": "top",
        "instruction_placement": "label",
        "hide_on_screen": "",
        "active": true,
        "description": "Hybrid Storage v2",
        "show_in_rest": true
    }
]