[
    {
        "key": "group_media_metadata",
        "title": "Media Metadata",
        "fields": [
            {
                "key": "field_media_type",
                "label": "Media Type",
                "name": "media_type",
                "type": "radio",
                "instructions": "Is this a photo or a video?",
                "required": 1,
                "choices": {
                    "image": "Image",
                    "video": "Video"
                },
                "default_value": "image",
                "layout": "horizontal"
            },
            {
                "key": "field_wp_image",
                "label": "Photo (Main Cover)",
                "name": "wp_image",
                "type": "image",
                "instructions": "The main photo displayed in the grid.",
                "required": 1,
                "conditional_logic": [
                    [
                        {
                            "field": "field_media_type",
                            "operator": "==",
                            "value": "image"
                        }
                    ]
                ],
                "return_format": "array",
                "preview_size": "medium",
                "library": "all"
            },
            {
                "key": "field_cloudinary_id",
                "label": "Cloudinary Public ID",
                "name": "cloudinary_id",
                "type": "text",
                "instructions": "Video ID from Cloudinary.",
                "required": 1,
                "conditional_logic": [
                    [
                        {
                            "field": "field_media_type",
                            "operator": "==",
                            "value": "video"
                        }
                    ]
                ],
                "placeholder": "folder/video-name"
            },
            {
                "key": "field_transcription",
                "label": "Transcription / Emotion",
                "name": "transcription",
                "type": "textarea",
                "rows": 3
            },
            {
                "key": "field_gallery_helpers_msg",
                "label": "Extra Photos (Gallery)",
                "name": "",
                "type": "message",
                "message": "Add extra photos for the carousel here."
            },
            {
                "key": "field_gallery_image_1",
                "label": "Extra Photo 1",
                "name": "gallery_image_1",
                "type": "image",
                "return_format": "array",
                "library": "all"
            },
            {
                "key": "field_gallery_image_2",
                "label": "Extra Photo 2",
                "name": "gallery_image_2",
                "type": "image",
                "return_format": "array",
                "library": "all"
            },
            {
                "key": "field_gallery_image_3",
                "label": "Extra Photo 3",
                "name": "gallery_image_3",
                "type": "image",
                "return_format": "array",
                "library": "all"
            }
        ],
        "location": [
            [
                {
                    "param": "post_type",
                    "operator": "==",
                    "value": "post"
                }
            ]
        ],
        "menu_order": 0,
        "position": "normal",
        "style": "default",
        "label_placement": "top",
        "instruction_placement": "label",
        "hide_on_screen": "",
        "active": true,
        "description": "Hybrid Storage v3 (Free Friendly)",
        "show_in_rest": true
    }
]